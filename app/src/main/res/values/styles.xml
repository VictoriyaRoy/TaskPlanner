<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="DateTimeDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>     <!--calendar background-->
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="CustomEditText" parent="Theme.Tasks">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="CustomCheckBox" parent="Theme.Tasks">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:buttonTint">@color/text_primary</item>
    </style>

    <style name="ListLabel" parent="SmallText">
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditLabel" parent="MediumText">
        <item name="android:background">@drawable/round_solid_bg</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomSlider" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
    </style>

</resources>