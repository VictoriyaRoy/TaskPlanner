<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="CustomEditText" parent="Theme.Tasks">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="CustomCheckBox" parent="Theme.Tasks">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <style name="ListLabel" parent="Theme.Tasks">
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
    </style>

    <style name="EditLabel" parent="MediumText">
        <item name="android:background">@drawable/round_solid_bg</item>
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

</resources>